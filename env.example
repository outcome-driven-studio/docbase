# Site Configuration
# For local development, use http://localhost:3000
# For production, use your actual domain with https://
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Access Control (Optional - for self-hosted instances)
# Set to "true" to disable new signups (only existing users can sign in)
# Leave blank or set to "false" to allow new signups
DISABLE_SIGNUPS="false"

# Supabase Configuration
# Get these from: https://app.supabase.com > Your Project > Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Google Maps API (Optional - for address autocomplete)
# Get from: https://developers.google.com/maps/documentation/javascript/get-api-key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Resend API (Optional - required for sending emails)
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key"

# OpenAI API (Optional - required for signature block parsing)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# Braintrust API (Optional - for prompt management and logging)
# Get from: https://braintrust.dev
BRAINTRUST_API_KEY="your-braintrust-api-key"

